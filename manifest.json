{
  "manifest_version": 2,
  "name": "Inbox by Gmail Checker",
  "version": "4.3.0",
  "description": "Displays the number of unread messages in your Inbox by Gmail. You can also click the button to open your inbox.",
  "author": "Joe Esposito <joe@joeyespo.com>",
  "icons": {
    "128": "media/icon_128.png",
    "256": "media/icon_256.png"
  },
  "browser_action": {
    "default_icon": "media/inbox_not_logged_in.png"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "options_page": "options.html",
  "optional_permissions": ["tabs"],
  "permissions": [
    "alarms",
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "*://inbox.google.com/",
    "*://mail.google.com/"
  ],
  "default_locale": "en"
}
